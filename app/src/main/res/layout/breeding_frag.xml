<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/selLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/flowborder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"


            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="耳牌号(母):"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/femaleBreedTV"
                android:layout_weight="2"
                android:hint="请选择"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_weight="3"
                android:src="@drawable/qrcode"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_weight="3"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"

            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="耳牌号(公):"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/maleBreedTV"
                android:layout_weight="2"
                android:hint="请选择"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_weight="3"
                android:src="@drawable/qrcode"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_weight="3"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="存栏位置: "
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <!--<TextView-->
            <!--android:layout_weight="1"-->
            <!--android:hint="请选择"-->
            <!--android:gravity="right"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/pigstyTV"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请选择" />

            <ImageView
                android:layout_weight="2"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="3dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="配种员: "
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <!--<TextView-->
            <!--android:layout_weight="1"-->
            <!--android:hint="请选择"-->
            <!--android:gravity="right"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/breederTV"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请选择" />

            <ImageView
                android:layout_weight="2"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="3dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="配种方式: "
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <!--<TextView-->
            <!--android:layout_weight="1"-->
            <!--android:hint="请选择"-->
            <!--android:gravity="right"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/breedWayTV"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请选择" />

            <ImageView
                android:layout_weight="2"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="3dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"

            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="配种日期: "
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <!--<TextView-->
            <!--android:layout_weight="1"-->
            <!--android:hint="请选择"-->
            <!--android:gravity="right"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/breedDateTV"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请选择" />

            <ImageView
                android:layout_weight="2"
                android:padding="2dp"
                android:src="@drawable/sel"
                android:layout_width="3dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="备注: "
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <!--<TextView-->
        <!--android:layout_weight="1"-->
        <!--android:hint="请选择"-->
        <!--android:gravity="right"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
        <RelativeLayout
            android:background="@drawable/flowborder"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <EditText
                android:id="@+id/addDescribeET"
                android:textAlignment="textStart"
                android:maxLength="50"
                android:hint="请输入50字符以内描述"
                android:background="@null"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/leftNum"
                android:text="剩余字数：50"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


        <RelativeLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:id="@+id/commitBtn"
                android:text="提交"
                android:layout_alignParentLeft="true"
                android:textColor="#1E90FF"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_gravity="center"
                android:id="@+id/resetBtn"
                android:text="重置"
                android:textColor="#1E90FF"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    </FrameLayout>
    <ListView
        android:id="@+id/breedingLV"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/radborder"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
    </ListView>
</RelativeLayout>
</android.support.v7.widget.CardView>