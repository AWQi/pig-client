<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/selLayout"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/flowborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="转舍类别: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                    <!--android:layout_weight="1"-->
                    <!--android:hint="请选择"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/changeTypeTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="个体" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="耳牌号:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/earlabelTV"
                        android:layout_weight="2"
                        android:hint="004"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="存栏位置: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/pigstyTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="猪圈二栋" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="转入舍: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                    <!--android:layout_weight="1"-->
                    <!--android:hint="请选择"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/desPigstyTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="猪圈3栋" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"

                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="转舍日期: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/changeDateTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="请选择" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/commitBtn"
                        android:text="提交"
                        android:layout_alignParentLeft="true"
                        android:textColor="#1E90FF"
                        android:background="#00000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/resetBtn"
                        android:text="重置"
                        android:textColor="#1E90FF"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ListView
            android:id="@+id/pigstyChangeLV"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="20dp"
            android:background="@drawable/radborder"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>
</LinearLayout>