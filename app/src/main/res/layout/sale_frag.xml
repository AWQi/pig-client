<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <android.support.v7.widget.CardView
            android:id="@+id/selLayout"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/flowborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="耳牌号:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/earlabelTV"
                        android:layout_weight="2"
                        android:hint="004"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="存栏位置: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/pigstyTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="猪圈二栋" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="猪只类型: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                    <!--android:layout_weight="1"-->
                    <!--android:hint="请选择"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/pigTypeTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="后备母猪" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="单价(元/kg)"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/unitPriceET"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:hint="1" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="3dp"
                        android:layout_height="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="头数"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                    <!--android:layout_weight="1"-->
                    <!--android:hint="请选择"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                    <EditText
                        android:id="@+id/numberET"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:hint="1" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="3dp"
                        android:layout_height="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="总           重: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/totalWeightET"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="number"
                        android:hint="请输入" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="3dp"
                        android:layout_height="20dp"/>
                </LinearLayout>








                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="客户姓名"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/customerNameET"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="text"
                        android:hint="请输入" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="3dp"
                        android:layout_height="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="客户电话"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/customerTelET"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:inputType="phone"
                        android:hint="请输入" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_gravity="center_vertical"
                        android:layout_width="3dp"
                        android:layout_height="20dp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_margin="10dp"

                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="销售日期: "
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <!--<TextView-->
                    <!--android:layout_weight="1"-->
                    <!--android:hint="请选择"-->
                    <!--android:gravity="right"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                    <TextView
                        android:id="@+id/salesDateTV"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="请选择" />

                    <ImageView
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:src="@drawable/sel"
                        android:layout_width="3dp"
                        android:layout_height="match_parent" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/commitBtn"
                        android:text="提交"
                        android:layout_alignParentLeft="true"
                        android:textColor="#1E90FF"
                        android:background="#00000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/resetBtn"
                        android:text="重置"
                        android:textColor="#1E90FF"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
   <!--     <ListView
            android:id="@+id/eliminateLV"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="20dp"
            android:background="@drawable/radborder"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </ListView>-->

</FrameLayout>